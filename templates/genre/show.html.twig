{% extends 'base.html.twig' %}

{% block title %}Genre{% endblock %}

{% block body %}
    <div class=" container mb-4 mt-2 pt-2" style="background-color:#287bb5;text-align: center; color: white;font-weight: bold;">
    <h5 style="color: white;font-weight: bold; padding-bottom:5px;">Genre</h5>
    </div>

    <div class="container">

    <div class="row mb-2">
    <div class="col-6">
    </div>
    <div class="col-2">
    <a class="btn btn-success btn-sm" href="{{ path('genre_index') }}">Liste des genres</a>
    </div>
    <div class="col-2">
    {% if is_granted('ROLE_ADMIN') %}
    <a class="btn btn-primary btn-sm" href="{{ path('genre_edit', {'id': genre.id}) }}">Modifier</a>
    </div>
    <div class="col-2">
    {{ include('genre/_delete_form.html.twig') }}
    </div>
    {% endif %}
    </div>

    <table class="table">
        <tbody>
            <tr class="table-active">
                <th class="pb-1">Id</th>
                <td class="pb-1">{{ genre.id }}</td>
            </tr>
            <tr>
                <th class="pb-1">Nom</th>
                <td class="pb-1">{{ genre.nom }}</td>
            </tr>
            <tr class="table-info">
				<th class="pb-1">Livres</th>
				<td class="pb-1">
					{% for livre in genre.livres %}
						<span><h6>{{ livre }}</h6></span>
					{% endfor %}
				</td>
			</tr>
        </tbody>
    </table>

    </div>
{% endblock %}
