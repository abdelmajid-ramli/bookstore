{% extends 'base.html.twig' %}

{% block title %}Livre{% endblock %}

{% block body %}
    <h1>Livre</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ livre.id }}</td>
            </tr>
            <tr>
                <th>Isbn</th>
                <td>{{ livre.isbn }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ livre.titre }}</td>
            </tr>
            <tr>
                <th>Nombre_pages</th>
                <td>{{ livre.nombrePages }}</td>
            </tr>
            <tr>
                <th>Date_de_parution</th>
                <td>{{ livre.dateDeParution ? livre.dateDeParution|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Note</th>
                <td>{{ livre.note }}</td>
            </tr>

            			<tr>
				<th>Genres</th>
				<td>
					{% for genre in livre.genres %}
						<span>
							{{ genre }}
						</span><br>
					{% endfor %}
				</td>
			</tr>
			<tr>
				<th>Auteurs</th>
				<td>
					{% for auteur in livre.auteurs %}
						<span>
							{{ auteur }}
						</span><br>
					{% endfor %}
				</td>
			</tr>
        </tbody>
    </table>

    <a href="{{ path('livre_index') }}">back to list</a>

    {% if is_granted('ROLE_ADMIN') %}
    <a href="{{ path('livre_edit', {'id': livre.id}) }}">Modifier</a>

    {{ include('livre/_delete_form.html.twig') }}
    {% endif %}
{% endblock %}
